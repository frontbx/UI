{
    "name": "frontbx",
    "homepage": "https://frontbxui.github.io/",
    "version": "0.0.1",
    "keywords": [
        "css",
        "sass",
        "mobile-first",
        "responsive",
        "front-end",
        "framework",
        "web"
    ],
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/frontbx/ui.git"
    },
    "bugs": {
        "url": "https://github.com/frontbx/ui/issues"
    },
    "main": "dist/js/frontbx-bundle.js",
    "module": "dist/js/frontbx.esm.js",
    "sass": "scss/frontbx-bundle.scss",
    "style": "dist/css/frontbx-bundle.css",
    "scripts": {
        "help": "node build/help.mjs",
        "start": "npm-run-all --parallel watch docs-serve",
        "dist": "npm-run-all --sequential css js docs-build",
        "css": "npm-run-all --sequential css-compile css-prefix css-minify",
        "css-compile": "sass --style expanded --source-map --embed-sources --no-error-css --verbose scss/:dist/css/",
        "css-prefix": "postcss dist/css/**/*.css --use autoprefixer --replace",
        "css-minify": "postcss dist/css/**/*.css !dist/css/**/*.min.css --use postcss-minify --dir dist/css/ --ext .min.css",
        "js": "npm-run-all --sequential js-compile js-minify",
        "js-compile": "npm-run-all --aggregate-output --parallel js-compile-*",
        "js-compile-standalone": "node build/import.mjs js/frontbx.js > dist/js/frontbx.js",
        "js-compile-bundle": "node build/import.mjs js/frontbx.umd.js > dist/js/frontbx-bundle.js",
        "js-compile-lazyload": "node build/import.mjs js/frontbx-lazyload.js > dist/js/frontbx-lazyload.js",
        "js-compile-esm": "node build/import.mjs js/frontbx.esm.js > dist/js/frontbx.esm.js",
        "js-minify": "npm-run-all --aggregate-output --parallel js-minify-*",
        "js-minify-standalone": "terser --compress passes=2 --mangle --comments \"/^!/\" --source-map \"url=frontbx.min.js.map,includeSources\" --output dist/js/frontbx.min.js -- dist/js/frontbx.js",
        "js-minify-bundle": "terser --compress passes=2 --mangle --comments \"/^!/\" --source-map \"url=frontbx-bundle.min.js.map,includeSources\" --output dist/js/frontbx-bundle.min.js -- dist/js/frontbx-bundle.js",
        "js-minify-esm": "terser --compress passes=2 --mangle --comments \"/^!/\" --source-map \"url=frontbx.esm.min.js.map,includeSources\" --output dist/js/frontbx.esm.min.js -- dist/js/frontbx.esm.js",
        "js-minify-lazyload": "terser --compress passes=2 --mangle --comments \"/^!/\" --source-map \"url=frontbx-lazyload.min.js.map,includeSources\" --output dist/js/frontbx-lazyload.min.js -- dist/js/frontbx-lazyload.js",
        "docs": "npm-run-all --sequential docs-build docs-serve",
        "docs-build": "npm-run-all --parallel docs-build-html docs-copy-assets docs-css docs-js",
        "docs-serve": "http-server -a localhost -p 8000 -c-1 -o /site",
        "docs-build-html": "node build/docs.mjs",
        "docs-copy-assets": "npm-run-all --parallel docs-copy-css docs-copy-js",
        "docs-copy-css": "copyfiles -f dist/css/*.{css,map} site/assets/css",
        "docs-copy-js": "copyfiles -f dist/js/*.{js,map} site/assets/js",
        "docs-css": "npm-run-all --sequential docs-css-compile docs-css-prefix docs-css-minify",
        "docs-css-compile": "sass --style expanded --source-map --embed-sources --no-error-css --verbose docs/assets/scss/:site/assets/css/",
        "docs-css-prefix": "postcss site/assets/css/frontbx-docs.css --use autoprefixer --replace",
        "docs-css-minify": "postcss site/assets/css/frontbx-docs.css --use postcss-minify --output site/assets/css/frontbx-docs.min.css",
        "docs-js": "npm-run-all --sequential docs-js-compile docs-js-minify",
        "docs-js-compile": "node build/import.mjs docs/assets/js/frontbx-docs.js > site/assets/js/frontbx-docs.js",
        "docs-js-minify": "terser --compress passes=2 --mangle --comments \"/^!/\" --source-map \"url=frontbx-docs.min.js.map,includeSources\" --output site/assets/js/frontbx-docs.min.js -- site/assets/js/frontbx-docs.js",
        "docs-lint": "html-linter --config ./build/html-linter.json site/**/*.html",
        "watch": "npm-run-all --parallel watch-*",
        "watch-css": "nodemon --watch  scss/ --ext scss --exec \"npm-run-all --sequential css docs-copy-css\"",
        "watch-js": "nodemon --watch js/ --ext js --exec \"npm-run-all --sequential js docs-copy-js\"",
        "watch-docs-md": "nodemon --watch docs/ --ext md,html --exec \"npm run docs-build-html\"",
        "watch-docs-css": "nodemon --watch docs/assets/scss/ --ext scss --exec \"npm run docs-css\"",
        "watch-docs-js": "nodemon --watch docs/assets/js/ --ext js --exec \"npm run docs-js\""
    },
    "files": [
        "dist/{css,js}/*.{css,js,map}",
        "{scss,js}/*.{scss,js,map}"
    ],
    "publishConfig": {
        "registry": "https://npm.pkg.github.com"
    },
    "devDependencies": {
        "autoprefixer": "^10.4.20",
        "console-tasks": "^0.1.9",
        "copyfiles": "^2.4.1",
        "html-linter": "^1.1.1",
        "http-server": "^14.1.1",
        "nodemon": "^3.1.4",
        "npm-run-all": "^4.1.5",
        "optimist": "^0.6.1",
        "postcss": "^8.4.41",
        "postcss-cli": "^11.0.0",
        "postcss-minify": "^1.1.0",
        "sass": "^1.77.8",
        "showdown": "^2.1.0",
        "terser": "^5.31.6",
        "console-table-printer": "^2.12.1"
    }
}
